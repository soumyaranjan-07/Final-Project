<% content_for :title, "Payment Complete | iSchool" %>
<%= render 'shared/navbar' %>


<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
          <div class="card-body p-5">

          <p class="lead fw-bold mb-5 text-center" style="color: #f37a27;">Purchase Reciept</p>
          <p class="lead fw-bold " style="color: #f37a27;"><%= current_student.name %></p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Date</p>
                <p><%= Time.now.strftime("%d/%m/%Y") %></p>
              </div>
              <div class="col mb-3">
                <p class="small text-muted mb-1">Email</p>
                <p><%= current_student.email %></p>
              </div>
            </div>

            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
              <div class="row">
                <div class="col-md-8 col-lg-9">
                  <p><%= @cr.name%></p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p><%= @cr.price%>.00</p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-8 col-lg-9">
                  <p class="mb-0">GST</p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p class="mb-0">45.00</p>
                </div>
              </div>
            </div>
            <% @total_price= @cr.price+45 %>
            <div class="row my-4">
              <div class="col-md-8 col-lg-9">
                <p class="lead fw-bold mb-0" style="color: #f37a27;">Total Price</p>
              </div>
              <div class="ccol-md-4 col-lg-3">
                <p class="lead fw-bold mb-0" style="color: #f37a27;"><%= @total_price %>.00</p>
              </div>
            </div>

            <p class="lead fw-bold mb-4 pb-2" style="color: #f37a27;">Thank you for Buying Our Course</p>

            <div class="row my-4">
              <div class="col-md-8 col-lg-9">
              <p class="mt-4 pt-2 mb-0">Click here to Go My Course Sections  <a href="/studentcourse/mycourse" style="color: #f37a27;">Mycourse</a></p>
              </div>
              <div class="ccol-md-4 col-lg-7">
              <p class="mt-4 pt-2 mb-0">Want any help? <a href="/home/contact" style="color: #f37a27;">Please contact
              us</a></p>
              </div>
            </div>
            
            

          </div>
        </div>
      </div>
    </div>
  </div>
</section>