    <!-- Section: Design Block -->
    <section>
		<div class="container">
			<!-- Title -->
			<div class="row mb-4 mycourse_head">
				<div class="col-lg-8 mx-auto text-center">
					<h2 class="fs-1 ">Your Courses</h2>
					
				</div>
			</div>

		

			<div class="tab-content" id="course-pills-tabContent">
				<!-- Content START -->
				<div class="tab-pane fade active show" id="course-pills-tabs-1" role="tabpanel" aria-labelledby="course-pills-tab-1">
					<div class="row g-4">
					<% @course_all.each do |c| %>
						<!-- Card item START -->
						<div class="col-sm-6 col-lg-4 col-xl-3">
							<div class="card shadow h-100">
								<%= image_tag c.course_image, {class:"card-img-top"}%>
								<!-- Card body -->
								<div class="card-body pb-0">
									<!-- Title -->
									<h5 class="card-title fw-normal"><%= c.name %></a></h5>
									<p class="mb-2 text-truncate-2"><%= c.description %></p>
									
								</div>
								<div class="card-footer">
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group " style="margin: 3px 3px 0px 50px;">
										<button type="button" class="btn btn-success btn-lg "><%= link_to 'Watch Lessons',studentcourse_lesson_path(:cr_id => c), class: "text-white" %></button>
									</div>
									
								</div>
								</div>
							</div>
						</div>
