<% content_for :title, "Login | iSchool" %>
<%= render 'shared/navbar' %>
<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0"><img src="/assets/logo.png" alt="" height="80px"></span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <%= f.email_field :email, class: "form-control form-control-lg", autofocus: true, autocomplete: "email" %>
                    <%= f.label :email, "Email address"%>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.password_field :password, class: "form-control form-control-lg", autocomplete: "current-password" %>
                    <%= f.label :password, "Password"%>
                  </div>

                  <% if devise_mapping.rememberable? %>
                  <div class="pt-1 mb-4">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                  <% end %>

                  <div class="pt-1 mb-4">
                    <%= f.submit "Login",class: "w-100 btn btn-dark btn-lg btn-block" %>
                  </div>

                  <a class="small text-muted" href="/students/password/new">Forgot password?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/students/sign_up" style="color: #393f81;">Register here</a></p>
                  <a class="small text-muted" href="/students/confirmation/new">Didn't receive confirmation instructions?</a>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>