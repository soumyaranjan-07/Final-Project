<% content_for :title, "Sign Up | iSchool" %>
<%= render 'shared/navbar' %>
<p id="notice"><%= notice %></p>
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <%= form_for(resource, as: resource_name, class:"mx-1 mx-md-4",url: registration_path(resource_name)) do |f| %>
                
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
                      <%= f.label :name, "Your Name"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
                      <%= f.label :email, "Your Email"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
                      <% if @minimum_password_length %>
                      <%= f.label :password, "Password"%>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %>    
                       
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
                      <%= f.label :password_confirmation, "Confirm Password"%>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.file_field :avatar_image, class: "form-control" %>
                      <%= f.label :avatar_image, "Profile Image"%>
                    </div>
                  </div>
                    
                 
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                   <%= f.submit "Sign up",class: "w-100 btn btn-lg btn-primary" %>
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <a class="small " style="color: #393f81;" href="/students/sign_in">If you Already Sign Up | Login Here</a>
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <a class="small " style="color: #393f81;" href="/students/confirmation/new">Didn't receive confirmation instructions?</a>
                  </div>

            
              <% end %>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
</section>
