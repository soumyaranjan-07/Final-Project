      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">List of Courses</h1>
        <h1 class="h2"><button type="button" class="btn btn-outline-warning"><%= link_to 'Add Course', new_course_path %></button</h1>
      </div>
      
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Duration</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.id %></td>
                <td><%= course.name %></td>
                <td><%= course.description %></td>
                <td><%= course.price %></td>
                <td><%= course.duration %> hour</td>
                <td><button type="button" class="btn btn-info"><%= link_to 'Show', course %></button></td>
                <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_course_path(course) %></button></td>
                <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
              </tr>
            <% end %>
          </tbody>
        </table>
