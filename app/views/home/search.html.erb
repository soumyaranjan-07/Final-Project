<% content_for :title, "Search | iSchool" %>
<%= render 'shared/navbar' %>
<section>
		<div class="container">
			<!-- Title -->
			<div class="row mb-4">
				<div class="col-lg-8 mx-auto text-center">
					<h2 class="fs-1">Your Search Courses</h2>
					<p class="mb-0">Choose from hundreds of courses from specialist organizations</p>
				</div>
			</div>

		

			<div class="tab-content" id="course-pills-tabContent">
				<!-- Content START -->
				<div class="tab-pane fade active show" id="course-pills-tabs-1" role="tabpanel" aria-labelledby="course-pills-tab-1">
					<div class="row g-4">
					<% @courses_all.each do |c| %>
						<!-- Card item START -->
						<div class="col-sm-6 col-lg-4 col-xl-3">
							<div class="card shadow h-100">
								<%= image_tag c.course_image, {class:"card-img-top"}%>
								<!-- Card body -->
								<div class="card-body pb-0">
									<!-- Title -->
									<h5 class="card-title fw-normal text-center"><%= c.name %></a></h5>
									<p class="mb-2 text-truncate-2"><%= c.description %></p>
									
								</div>
								<div class="card-footer">
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group" style="margin: 3px 3px 0px 15px;">
										<button type="button" class="btn btn-success "><%= link_to 'Enroll',checkout_payment_path(:cr_id => c), class: "text-white" %></button>
									</div>
									<div class="text-muted" style="margin: 3px 26px 0px 3px;font-size: 25px;" ><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-currency-rupee" viewBox="0 0 16 16">
									<path d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4v1.06Z"/>
								</svg><%= c.price %>
									</div>
								</div>
								</div>
							</div>
						</div>
					<% end %>	
					</div> 
				</div>

				
			</div>
		</div>

	</section>